<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body itemscope = "" itemtype = "http://schema.org/WebPage">
<% include ../partials/nav.ejs %>
  <div class="container" itemscope = "" itemtype = "http://schema.org/CreativeWork">
    <section id="boardList">
      <ul>
        <% for(var i=0; i < board_list.length; i++) { %>
        <li>
          <hgroup>
            <h2>
              <a href="/board/view?board_table_id=<%= board_table_id %>&post_index=<%= board_list[i].post_index %>">
                <%= board_list[i].title %>
              </a>
            </h2>
            <h3>
              <%= board_list[i].writer %>
            </h3>
            <time>
              <%= board_list[i].writed %>
            </time>
          </hgroup>
        </li>
        <%}%>
      </ul>
    </section>
    <section>
      <ul>
        <li>
        <form method="get" action="/board/search_post">
          <input type="hidden" name="page" value="0" />
          <input type="hidden" name="page_length" value="10" />
          <select name="search_option" id="BoardSearchOption">
            <option value="title">제목</option>
            <option value="tags">태그</option>
            <option value="writer">작성자</option>
          </select>
          <input name="search_value" id="BoardSearchValue" type="text" />
        </form>
        </li>
      </ul>
    </section>
    <section id="boardPaging">
      <ul>
        <% for(var i=0; i < board_paging.length; i++) { %>
        <li>
          <% if(board_paging[i].paging != page_) { %>
            <% if(search_option) { %>
              <a href="/board/search_post?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10&search_option=<%= search_option %>&search_value=<%= search_value %>">
                <%= board_paging[i].paging+1 %>
              </a>
            <%}else {%>
              <a href="/board/list?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10">
                <%= board_paging[i].paging+1 %>
              </a>
            <%}%>
          <%}else {%>
            <% if(search_option) { %>
              <a class="active" href="/board/search_post?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10&search_option=<%= search_option %>&search_value=<%= search_value %>">
                <%= board_paging[i].paging+1 %>
              </a>
            <%}else {%>
              <a class="active" href="/board/list?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10">
                <%= board_paging[i].paging+1 %>
              </a>
            <%}%>
          <%}%>
        </li>
        <%}%>
        <li>
          <a href="/board/write?new_post=true&board_table_id=<%= board_table_id %>">글쓰기</a>
        </li>
      </ul>
    </section>
  </div>
<% include ../partials/footer.ejs %>
</body>
</html>
