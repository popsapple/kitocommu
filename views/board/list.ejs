<!DOCTYPE html>
<html class="sub">
<head>
  <link rel="stylesheet" type="text/css" href="/board/<%= css_skin %>?token='<%= locals.nowtime %>'" />
  <% include ../partials/header.ejs %>
  <div class="sub designcustom" itemscope itemtype = "http://schema.org/WebPage" role="main">
    <% include ../partials/nav.ejs %>
      <div class="container board normal" itemscope = "" itemtype = "http://schema.org/CreativeWork">
        <% include ../partials/sub_visual.ejs %>
        <% if(locals.notice_list) { %>
        <section id="boardNoticeList" class="loading_complete notice_index<%= locals.notice_list.length %>">
          <ul>
            <% for(var i=0; i < notice_list.length; i++) { %>
            <li>
              <div>
                <h2>
                  <span class="label label-default">Notice</span>
                  <a href="/board/view?board_table_id=<%= board_table_id %>&post_index=<%= notice_list[i].post_index %>">
                    <%= notice_list[i].title %>
                  </a>
                </h2>
                <time class="visible-sm visible-md visible-lg">
                  <span class="blind">작성일</span>
                  <%= notice_list[i].writed_date %>
                </time>
                <h3 class="visible-sm visible-md visible-lg">
                  <span class="blind">작성자</span>
                  <%= notice_list[i].writer_nickname %>
                </h3>
              </div>
            </li>
            <%}%>
          </ul>
        </section>
        <%}%>
        <section id="boardList" class="loading_complete">
          <ul>
            <% if(board_list.length == 0) {%>
            <li>
              <div>
                <h2>
                  작성된 게시물이 없습니다.
                </h2>
              </div>
            </li>
            <% } %>
            <% for(var i=0; i < board_list.length; i++) { %>
            <li>
              <div>
                <h2>
                  <a href="/board/view?board_table_id=<%= board_table_id %>&post_index=<%= board_list[i].post_index %>">
                    <%= board_list[i].title %>
                  </a>
                </h2>
                <time class="visible-sm visible-md visible-lg">
                  <span class="blind">작성일</span>
                  <%= board_list[i].writed_date %>
                </time>
                <h3>
                  <span class="blind">작성자</span>
                  <%= board_list[i].writer_nickname %>
                </h3>
              </div>
            </li>
            <% if(locals.board_list[i].reply_list) { %>
              <% for(var j=0; j < board_list[i].reply_list.length; j++) { %>
                <li>
                    <div>
                      <h2>
                        <a href="/board/view?board_table_id=<%= board_list[i].reply_list[j].board_table_id %>&post_index=<%= board_list[i].reply_list[j].post_index %>&is_reply=yes&reply_table_id=<%= board_list[i].reply_list[j].reply_table %>">
                          <span class="reple_icon">
                            <span class="blind"> 답글 </span>
                          </span> <%= board_list[i].reply_list[j].title %>
                        </a>
                      </h2>
                      <time class="visible-sm visible-md visible-lg">
                        <span class="blind">작성일</span>
                        <%= board_list[i].reply_list[j].writed_date %>
                      </time>
                      <h3>
                        <span class="blind">작성자</span>
                          <%= board_list[i].reply_list[j].writer_nickname %>
                      </h3>
                    </div>
                </li>
              <%}%>
            <%}%>
          <%}%>
          </ul>
        </section>
        <section class="search_con">
          <ul>
            <li>
            <form method="get" action="/board/search_post">
              <input type="hidden" name="board_table_id" value="<%= board_table_id %>" />
              <% if(locals.page) { %>
                <input type="hidden" name="page" value="<%= page %>" />
              <%}else {%>
                <input type="hidden" name="page" value="0" />
              <%}%>
              <input type="hidden" name="page_length" value="10" />
              <% if(locals.searchoption) { %>
                <select name="searchoption" value="<%= searchoption %>" id="BoardSearchOption">
              <%}else {%>
                <select name="searchoption" value="" id="BoardSearchOption">
              <%}%>
                <option value="title">제목</option>
                <option value="tags">태그</option>
                <option value="writer">작성자</option>
                <option value="category">카테고리</option>
              </select>
              <% if(locals.searchvalue) { %>
                <input name="searchvalue" value="<%= searchvalue %>" id="BoardSearchValue" type="text" />
              <%}else {%>
                <input name="searchvalue" value="" id="BoardSearchValue" type="text" />
              <%}%>
              <input type="submit" class="linebutton small search_button" value="검색하기" />
            </form>
            </li>
          </ul>
        </section>
        <section id="boardPaging">
          <ul class="write_<%= locals.writing_level %>">
            <% for(var i=0; i < board_paging.length; i++) { %>
            <li>
              <% if(board_paging[i].paging != page_) { %>
                <% if(locals.searchoption) { %>
                  <a href="/board/search_post?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10&searchoption=<%= searchoption %>&searchvalue=<%= searchvalue %>">
                    <%= board_paging[i].paging+1 %>
                  </a>
                <%}else {%>
                  <a href="/board/list?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10">
                    <%= board_paging[i].paging+1 %>
                  </a>
                <%}%>
              <%}else {%>
                <% if(locals.searchoption) { %>
                  <a class="active" href="/board/search_post?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10&searchoption=<%= searchoption %>&searchvalue=<%= searchvalue %>">
                    <%= board_paging[i].paging+1 %>
                  </a>
                <%}else {%>
                  <a class="active" href="/board/list?board_table_id=<%= board_table_id %>&page=<%= board_paging[i].paging %>&page_length=10">
                    <%= board_paging[i].paging+1 %>
                  </a>
                <%}%>
              <%}%>
            </li>
            <%}%>
            <% if(locals.writing_level == 'yes') { %>
              <li class="button_li">
                <a class="linebutton small" href="/board/write?board_table_id=<%= board_table_id %>">글쓰기</a>
              </li>
            <%}%>
          </ul>
        </section>
      </div>
    </div>
<% include ../partials/footer.ejs %>
</body>
</html>
