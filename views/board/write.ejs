<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body itemscope = "" itemtype = "http://schema.org/WebPage">
<% include ../partials/nav.ejs %>
  <div class="container" itemscope = "" itemtype = "http://schema.org/CreativeWork">
    <section>
      <%if(!locals.title){%>
        <%if(!locals.is_reply){%>
          <form id="BoardWriteForm" method="post" action="/board_write_submit">
        <%} else {%>
          <form id="BoardWriteForm" method="post" action="/board_reply_submit">
        <%}%>
      <%} else {%>
        <%if(!locals.is_reply){%>
          <form id="BoardWriteForm" method="post" action="/board_modify_submit">
        <%} else {%>
          <form id="BoardWriteForm" method="post" action="/board_reply_modify_submit">
        <%}%>
      <%}%>
        <%if(locals.board_table_id){%>
          <%if(!locals.is_reply){%>
            <input id="BoardTableId" name="board_table_id" type="hidden" value="<%= board_table_id %>" />
          <%} else {%>
            <%if(locals.reply_table_id){%>
              <input id="ReplyTableId" name="reply_table_id" type="hidden" value="<%= reply_table_id %>" />
            <%}%>
            <input id="BoardTableId" name="board_table_id" type="hidden" value="<%= board_table_id %>" />
          <%}%>
        <%}%>
        <%if(locals.post_index){%>
          <%if(!locals.is_reply){%>
            <input id="BoardPostIdx" name="post_index" type="hidden" value="<%= post_index %>" />
          <%} else {%>
            <input id="BoardReplyPostIdx" name="reply_index" type="hidden" value="<%= reply_index %>" />
            <input id="BoardPostIdx" name="post_index" type="hidden" value="<%= post_index %>" />
          <%}%>
        <%}%>
        <fieldset>
          <ul>
            <li>
              <label for="BoardTitle">제목</label>
              <%if(locals.title){%>
                <input id="BoardTitle" name="title" type="text" value="<%= title %>" />
              <%}else {%>
                <input id="BoardTitle" name="title" type="text" />
              <%}%>
            </li>
            <li>
              <label for="BoardCategory">카테고리</label>
              <%if(locals.category){%>
                <select id="BoardCategory" name="category" type="text" data-value="<%= category %>">
                  <% for(var i=0; i < category_list.length; i++) { %>
                    <option value="<%= category_list[i] %>"><%= category_list[i] %></option>
                  <%}%>
                </select>
              <%}else {%>
                <select id="BoardCategory" name="category" type="text">
                  <% for(var i=0; i < category_list.length; i++) { %>
                    <option value="<%= category_list[i] %>"><%= category_list[i] %></option>
                  <%}%>
                </select>
              <%}%>
            </li>
            <li>
              <label for="BoardSecret">비밀글</label>
              <%if(locals.is_secret){%>
                <input id="BoardSecret" class="CommentSecret" name="is_secret" data-value="<%= is_secret %>" type="checkbox" />
              <%}else {%>
                <input id="BoardSecret" class="CommentSecret" name="is_secret" data-value="" type="checkbox" />
              <%}%>
            </li>
            <%if(locals.is_admin == true){%>
              <li>
                <label for="BoardNotice">공지사항</label>
                <%if(locals.is_notice == "on"){%>
                  <input id="BoardNotice" name="is_notice" type="checkbox" data-value="<%= is_notice %>" />
                <%}else {%>
                  <input id="BoardNotice" name="is_notice" type="checkbox" value="false"/>
                <%}%>
              </li>
            <%}%>
            <li>
              <label for="BoardTags">태그 #으로 분리해서 적어주세요</label>
              <%if(locals.tags){%>
                <input id="BoardTags" name="tags" type="text" value="<%= tags %>" />
              <%}else {%>
                <input id="BoardTags" name="tags" type="text" />
              <%}%>
            </li>
            <li>
              <label for="BoardContents">글내용</label>
              <%if(locals.contents){%>
                <textarea id="BoardContents" name="contents"><%= contents %></textarea>
              <%}else {%>
                <textarea id="BoardContents" name="contents"></textarea>
              <%}%>
            </li>
          </ul>
        </fieldset>
        <%if(!locals.title){%>
          <button id="BoardSaveButton" type="submit" class="btn btn-default">등록하기</button accesskey="s">
        <%} else{%>
          <button id="BoardModifyButton" type="submit" class="btn btn-default">수정하기</button accesskey="s">
        <%}%>
        <%if(locals.list_type == 'thumnail'){%>
          <%if(locals.thumnail){%>
            <input id="BoardThumnailValue" name="thumnail" type="hidden" value="<%= thumnail %>" />
          <%}else {%>
            <input id="BoardThumnailValue" name="thumnail" type="hidden" value="" />
          <%}%>
        <%}%>
      </form>
      <%if(locals.list_type == 'thumnail'){%>
        <div>
          <label for="BoardContents">썸네일</label>
          <%if(locals.thumnail){%>
            <form id="ajaxform" action="/upload_thumnail" method="post" enctype="multipart/form-data">
              <input id="BoardThumnail" name="thumnailfile" type="file" value="<%= thumnail %>" />
              <input id="BoardThumnailButton" type="button" value="Submit" />
            </form>
          <%}else {%>
            <form id="ajaxform" action="/upload_thumnail" method="post" enctype="multipart/form-data">
              <input id="BoardThumnail" name="thumnailfile" type="file" value="" />
              <input id="BoardThumnailButton" type="button" value="Submit" />
            </form>
          <%}%>
        </div>
      <%}%>
      <%if(locals.title){%>
          <form method="post" action="/board_remove_submit" onclick="BoradWriteFileDelete('remove');">
            <input id="RemoveTableId" name="board_table_id" type="hidden" value="<%= board_table_id %>" />
            <input id="RemovePostIdx" name="post_index" type="hidden" value="<%= post_index %>" />
            <button type="submit" class="btn btn-default">삭제하기</button accesskey="d">
          </form>
      <%}%>
      <script>
      CKEDITOR.replace( 'BoardContents', {
        filebrowserUploadUrl: '/upload'
      } );

      $(window).bind('beforeunload', function(){
        BoradWriteUnloadEvent();
        return false;
      });
      </script>
    </section>
  </div>
<% include ../partials/footer.ejs %>
</body>
</html>
