<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body itemscope = "" itemtype = "http://schema.org/WebPage">
<% include ../partials/nav.ejs %>
  <div class="container" itemscope = "" itemtype = "http://schema.org/CreativeWork">
    <section>
      <form method="post" action="/login">
        <fieldset>
          <legend>기본 인적사항</legend>
          <ul>
            <li>
              <h3>
                <label for="joinId">아이디</label>
              </h3>
              <input id="joinId" name="id" type="text" value="" pattern="^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*$" placeholder="아이디를 입력하세요 (숫자,알파벳,-,_등만 입력 가능합니다.)" required />
            </li>
            <li>
              <h3>
                <label for="joinPassword">비밀번호</label>
              </h3>
              <input id="joinPassword" name="pw" type="password" pattern="^[0-9a-zA-Z]*$" placeholder="비밀번호를 입력하세요 (숫자,알파벳만 입력 가능합니다.)" required />
            </li>
          </ul>
        </fieldset>
        <button type="submit" class="btn btn-default ">로그인하기</button accesskey="s">
      </form>
      <ul>
        <li>
          <button id="FindIdPw">비밀번호 / 아이디 찾기</button>
        </li>
      </ul>
    </section>
  </div>
  <script>
    $("#FindIdPw").click(function(){
      window.open('/search_login_info', '', 'fullscreen=yes, resizable=yes, scrollbars=yes, x=100,y=200,width=' + 400 + ',height=' + 600);
    });
  </script>
<% include ../partials/footer.ejs %>
</body>
</html>
